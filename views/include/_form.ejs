 <!-- form handling -->
 <form action="/api/apps" method="POST" id="add_app">
    <div class="new_app">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="text" name="name"  placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Package</label>
            <input type="text" name="package"  placeholder="com.package.io">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Current Version</label>
            <input type="text" name="version"  placeholder="1.2.0">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>